<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

     <table name="infobase_faq" resource="default" engine="innodb" comment="FAQ">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
            comment="Entity ID"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" identity="false" default="0" 
            comment="Status" />
        <column xsi:type="varchar" name="question" nullable="false" length="255" 
            comment="Question" />
        <column xsi:type="text" name="answer" 
            comment="Answer" />
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Update Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>

    <table name="infobase_faq_store" resource="default" engine="innodb" comment="Faq To Store Linkage Table">
        <column xsi:type="int" name="faq_id" unsigned="true" nullable="false" identity="false"
            comment="Entity ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
            comment="Store ID"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="faq_id"/>
            <column name="store_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="INFOBASE_FAQ_STORE_FAQ_ID_INFOBASE_FAQ_ENTITY_ID" table="infobase_faq_store"
            column="faq_id" referenceTable="infobase_faq" referenceColumn="entity_id" onDelete="CASCADE" />

        <constraint xsi:type="foreign" referenceId="INFOBASE_FAQ_STORE_STORE_ID_STORE_STORE_ID" table="infobase_faq_store"
            column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE" />

        <index referenceId="INFOBASE_FAQ_STORE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>